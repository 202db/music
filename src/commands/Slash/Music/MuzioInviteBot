const { Command } = require("sheweny");

module.exports = class PingUserCommand extends Command {
  constructor(client) {
    super(client, {
      name: "Invite",
      type: "commands",
      description: "Affiche le lien d'invitation du bot",
      category: "Misc",
    });
  }

  execute(message) {
    message.reply({
      content: `https://discord.com/oauth2/authorize?client_id=1282418825618260152&permissions=8&integration_type=0&scope=bot+applications.commands`,
    });
  }
};
