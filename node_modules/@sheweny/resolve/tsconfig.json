{
  "version": "2.4.2",
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "ES2021",
    "module": "CommonJS",
    //"module": "system",
    "noEmitOnError": true, //Pas de compilation en cas d'erreur,
    "strict": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": false,
    "outDir": "lib",
    //"outFile": "./dist/main.js",
    "rootDir": "./src",
    "removeComments": false,
    "noImplicitAny": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false
  },
  "exclude": ["node_modules", "test"]
}
